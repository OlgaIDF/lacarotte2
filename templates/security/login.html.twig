{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}
<!-- Flash -->
<section class="section">
    {% for  message in app.flashes('message') %}
    <div class="alert alert-success text-center" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    {% for  message in app.flashes('warning') %}
    <div class="alert alert-warning text-center" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    {% for  message in app.flashes('danger') %}
    <div class="alert alert-danger text-center" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    {{ include('navbar.html.twig')}}
    <div class="row">
        <div class="col-10 offset-1 text-center py-3">

            <h2 class="pt-3 text-center">Connexion</h2>

        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-5 connexion">
            <form method="post">

                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                <div class="mb-3 alert alert-success text-center">
                    Vous &ecirc;tes connect&eacute; avec l'identifiant {{ app.user.username }} (<a
                        href="{{ path('app_logout') }}" class="text-danger">d&eacute;connexion</a>).
                </div>
                {% endif %}


                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    required autofocus>

                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">



                <button type="submit" id="form-submit"
                    class="btn btn-lg text-center mt-3 float-right">Connexion</button>
            </form>
        </div>
    </div>


    <div class="row">
        <div class="col-10 offset-1 text-center py-5  connexion">
            <a href="{{ path('app_register') }}" class="formulaire text-mute">Pas de compte ? Créez-en un</a><br />
            <a href="{{ path('app_forgotten_password') }}" class="formulaire">Mot de passe oublié ?</a>


        </div>
    </div>

</section>
{% endblock %}