{% extends 'base.html.twig' %}

{% block title %} -panier
{% endblock %}

{% block body %}
<div class="container-fluid">
 {{ include('navbar.html.twig')}}
</div>
<div class="row">
    <div class="col-10 offset-1 text-center pt-5">
        <h2> Votre panier</h2>
<p class="btn btn-warning btn-sm"> A emporter uniquement</p>
    </div>
</div>


{% if items | length > 0 %}
<div class="row">
    <div class="col-10 offset-1">
    <table class="table">
        <thead class="text-center">
            <tr>
                <th>N</th>
                
                <th>Photo</th>
                <th>Menu</th>
                <th>Composants</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
           
                <tr>
                    <td>{{ loop.index }}.</td>
                   
                    <td><img src="{{ asset('img/menu/' ~ item.menu.img) }}" class="card-img-top" id="img-panier" alt="{{ item.menu.name }}"></td>
                    <td>{{ item.menu.name }}</td>
                    <td>{{ item.menu.ingredients }}</td>
                    <td>{{ item.menu.price }}&euro;</td>
                    <td class="text-center">{{ item.quantity }}</td>
                    <td> {{ item.menu.price * item.quantity }}&euro;</td>
                     <td>
                        <a href="{{ path('cart_delete', {'id': item.menu.id }) }}" class="btn btn-warning btn-sm"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                          </svg></a>

                    </td> 
                </tr>
             
            {% endfor %}
        </tbody>
        <tfoot>
         <tr>
                <td colspan="6" class="text-right"><strong>Total : </strong></td>
                <td>{{ total }}&euro;</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>
</div>  
<div class="row">
    <div class="col-5 offset-1 mb-5 continuer">
        <a href="{{ path('home') }}#menus"><i class="fa fa-arrow-left" aria-hidden="true"></i> Continuer mes achats</a>
    </div>
    <div class="col-5 mb-5">
        <a href="{{ path('order') }}" id="form-submit" class="btn btn-lg text-center float-right">Commander <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
    </div>
</div>  
{% else %}
<div class="row">
    <div class="col-12 text-center">
     <p>Votre panier est vide</p>   
    </div>
</div>
    <div class="row">
    <div class="col-12 text-center mb-5">
        <a href="{{ path('home') }}#menus" type="submit" id="form-submit" class="btn btn-outline-dark ">Commancer mes achats</a>
    </div>
</div>
    
{% endif %}




{% endblock %}